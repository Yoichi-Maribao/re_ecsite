<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <span>名前</span>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <%= f.label :kana_last_name, "(セイ)" %>
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name", placeholder: "レイワ" %>
    <%= f.label :kana_first_name, "(メイ)" %>
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name", placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都豊島区西池袋1-2-3" %>
  </div>

  <div class="field">
    <%= f.label :tel_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number", placeholder: "00000000000" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to "こちら", new_session_path(resource_name) %>　からログインしてください。</p>
